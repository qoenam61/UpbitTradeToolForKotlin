<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/default_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/large_text_size"
            android:text="모니터링 리스트"/>
        <Button
            android:id="@+id/change_parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/large_margin"
            android:text="조건"/>
        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/circle_bar"
            android:layout_width="@dimen/larger_margin"
            android:layout_height="@dimen/larger_margin"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/progress_circle_bar_margin"/>
        <TextView
            android:id="@+id/trend_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size"
            android:layout_margin="@dimen/default_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin"
            android:background="@drawable/borderline_bold_out"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/coin_list_text_size"
                    android:textStyle="bold"
                    android:background="@drawable/borderline_bold"
                    android:text="한글명"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/coin_list_text_size"
                    android:background="@drawable/borderline_bold"
                    android:text="현재가"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/coin_list_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/borderline_bold"
                        android:text="Rate/day"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/coin_list_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/borderline_bold"
                        android:text="Rate/min"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/coin_list_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/borderline_bold"
                        android:textColor="@color/green"
                        android:text="틱거래수"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/coin_list_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/borderline_bold"
                        android:textColor="@color/green"
                        android:text="분평/일평"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/coin_list_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/borderline_bold"
                        android:text="bid/ask"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/coin_list_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/borderline_bold"
                        android:text="bidV/askV"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/monitor_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderline"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
