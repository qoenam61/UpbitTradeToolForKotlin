<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coin_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderline_bold_out"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/market_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/coin_list_text_size"
            android:textStyle="bold"
            android:background="@drawable/borderline"
            android:text="Market"/>
        <TextView
            android:id="@+id/trade_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/coin_list_text_size"
            android:background="@drawable/borderline"
            android:text="READY"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/trade_profit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:background="@drawable/borderline"
                android:text="x.x%"/>
            <TextView
                android:id="@+id/trade_profit_rate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:background="@drawable/borderline"
                android:text="x.x%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/trade_ask_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:background="@drawable/borderline"
                android:text="x"/>
            <TextView
                android:id="@+id/trade_bid_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:background="@drawable/borderline"
                android:text="x.x%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/trade_bid_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:background="@drawable/borderline"
                android:text="x.x%"/>
            <TextView
                android:id="@+id/trade_buy_period"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/coin_list_text_size"
                android:textStyle="bold"
                android:background="@drawable/borderline"
                android:text="x.x%"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>