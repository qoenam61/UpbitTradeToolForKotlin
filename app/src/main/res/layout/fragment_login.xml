<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_login">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/text_access_key"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_login_height"
                android:gravity="center"
                android:text="Access Key"/>
            <EditText
                android:id="@+id/edit_access_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textPassword"
                android:textSize="@dimen/default_text_size"
                android:hint="Enter to Access Key"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/text_secret_key"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_login_height"
                android:gravity="center"
                android:text="Secret Key"/>
            <EditText
                android:id="@+id/edit_secret_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textPassword"
                android:textSize="@dimen/default_text_size"
                android:hint="Enter to Secret Key"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Log In"/>
</RelativeLayout>