<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="@android:color/lighter_gray" />

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:top="-2dp"
        android:left="-2dp"
        android:bottom="-2dp"/>

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray" />

</shape>
